  <!-- Modal -->
  <div id="modalBackdrop" class="modal-backdrop" role="dialog" aria-modal="true" aria-hidden="true" aria-labelledby="modalTitle">
    <div class="modal">
      <div style="display:flex; justify-content:space-between; align-items:center;">
        <h2 id="modalTitle">Mehr Informationen</h2>
        <button class="close" id="modalClose" aria-label="SchlieÃŸen">âœ•</button>
      </div>
      <p>Danke fÃ¼rs Anschauen â€” dieses kleine Modal zeigt, wie man zusÃ¤tzliche Inhalte einblendet. Du kannst hier Links, Formulare oder andere Interaktionen platzieren.</p>
      <p style="font-size:13px;color:#667">Beispiel: Weiterleitung nach Klick, Newsletter-Signup oder Download.</p>
      <div style="display:flex; gap:8px; justify-content:flex-end; margin-top:8px;">
        <button id="modalAction" class="cta" style="padding:10px 14px;">Aktion ausfÃ¼hren</button>
        <button class="secondary" id="modalCancel">Abbrechen</button>
      </div>
    </div>
  </div>

  <script>
    // Einfaches, robustes Verhalten fÃ¼r Buttons
    (function() {
      const primaryBtn = document.getElementById('primaryBtn');
      const secondaryBtn = document.getElementById('secondaryBtn');
      const klickInfo = document.getElementById('klickInfo');

      const modalBackdrop = document.getElementById('modalBackdrop');
      const modalClose = document.getElementById('modalClose');
      const modalCancel = document.getElementById('modalCancel');
      const modalAction = document.getElementById('modalAction');

      let clicks = 0;

      // Hauptbutton: zÃ¤hlt Klicks und zeigt kurzes Feedback
      primaryBtn.addEventListener('click', () => {
        clicks += 1;
        if (clicks === 1) {
          klickInfo.textContent = 'Danke! Du hast 1x geklickt.';
        } else {
          klickInfo.textContent = `Danke! Du hast ${clicks}x geklickt.`;
        }

        // kleine visuelle "pulse" Animation
        primaryBtn.animate([
          { transform: 'scale(1)' },
          { transform: 'scale(1.04)' },
          { transform: 'scale(1)' }
        ], {
          duration: 280,
          easing: 'cubic-bezier(.2,.9,.3,1)'
        });

        // Beispiel: nach 5 Klicks etwas anderes tun (nur Demo)
        if (clicks === 5) {
          alert('ðŸŽ‰ 5 Klicks erreicht â€” gut gemacht!');
        }
      });

      // Modal Ã¶ffnen
      function openModal() {
        modalBackdrop.style.display = 'flex';
        modalBackdrop.setAttribute('aria-hidden', 'false');
        // Fokusmanagement: fokus auf erstem Fokus-Element
        modalClose.focus();
        // Trap focus (sehr einfacher trap)
        document.addEventListener('focus', trapFocus, true);
      }

      function closeModal() {
        modalBackdrop.style.display = 'none';
        modalBackdrop.setAttribute('aria-hidden', 'true');
        document.removeEventListener('focus', trapFocus, true);
        secondaryBtn.focus();
      }

      secondaryBtn.addEventListener('click', openModal);
      modalClose.addEventListener('click', closeModal);
      modalCancel.addEventListener('click', closeModal);

      modalAction.addEventListener('click', () => {
        // Beispielaktion: Weiterleitung (kommentiert). Du kannst hier AJAX / Form etc.
        // window.location.href = 'https://example.com';
        alert('Modal-Aktion ausgefÃ¼hrt (Demo).');
        closeModal();
      });

      // SchlieÃŸen mit Escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modalBackdrop.style.display === 'flex') {
          closeModal();
        }
      });

      // Simple focus trap: falls Fokus auÃŸerhalb Modal, bring ihn zurÃ¼ck
      function trapFocus(e) {
        if (modalBackdrop.style.display !== 'flex') return;
        if (!modalBackdrop.contains(e.target)) {
          e.stopPropagation();
          modalClose.focus();
        }
      }

      // Accessibility: Enter/Space on primaryBtn works by default for button elements
    })();
  </script>
